#toolbar{
  width: site-action;
  height:height100p;
  background:#222;
  color:#fff;
  position: fixed;
  top:0;
  left:0;
  font-size:14px;
  a {
    display: inline-block;
    width: 100%;
    color: #444444;
    font-size: font-size + 20;
    text-align: center;
    padding:0.5em 0;
    transition(all 0.2s ease-in-out);
    @media mini{
      // TODO:
    }
    @media tablet{
      // TODO:
    }
    &:hover{
      color:#fff;
      background: #111111;
    }
    &:hover:before{
      color: color-blue;
    }
    &[title="weibo"]::before, &[title="twitter"]::before, &[title="github"]::before, &[title="facebook"]::before{
      font-family: font-icon-family;
      font-smoothing();
    }
    &[title="weibo"]::before{
      content: "\f18a";
    }
    &[title="twitter"]::before{
      content: "\f099";
    }
    &[title="github"]::before{
      content: "\f09b";
    }
    &[title="facebook"]::before{
      content: "\f09a";
    }
  }

  .back-top{
    position:absolute;
    left:0;
    bottom:0;
    @media tablet{

    }
    @media desktop{

    }
    &::before{
      content:"\f077";
    }
    border-top:1px solid #333;
  }

  .social-font {
    width: 100%;
    margin: 0 auto;
    overflow: hidden;
    float: left;
    text-align: center;
    @media tablet{
      // TODO:
    }

  }
}