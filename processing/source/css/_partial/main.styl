.entry-title {
  font-size: 30px;
  margin-top: -5px;
}

.entry-meta {
  color: gray7;
  margin-bottom: 40px;
  a {
    color: primary-color;
  }
  .sep {
    display: block;
    border-top: 1px solid #ececec;
    position: relative;
    margin: 15px 60px 10px 0;
  }
  .post-format {
    position: absolute;
    right: -60px;
    top: -25px;
    padding: 5px;
    background: #f5f5f5;
    -webkit-border-radius: 500px;
    -moz-border-radius: 500px;
    border-radius: 500px;
  }
  .icon-file-text {
    width: 38px;
    height: 38px;
    border: 1px solid #e5e5e5;
    color: #dddddd;
    display: block;
    line-height: 38px;
    text-align: center;
    background-color: #ffffff;
    -webkit-border-radius: 500px;
    -moz-border-radius: 500px;
    border-radius: 500px;
  }
  .posted-on, .comments-link {
    font-size: 12px;
    line-height: 20px;
    margin-right: 10px;
    a {
      color: gray7;
      &:hover {
        color: primary-color;
        text-decoration: none;
      }
    }
  }
}

.entry-content {
  font-size: 1.4em;
}
