// mixin
// -------------------------

transition(arguments) {
  -webkit-transition: arguments;
  -moz-transition: arguments;
  -o-transition: arguments;
  transition: arguments;
}

box-sizing(argument) {
  -webkit-box-sizing: argument;
  -moz-box-sizing: argument;
  -o-box-sizing: argument;
  box-sizing: argument;
}