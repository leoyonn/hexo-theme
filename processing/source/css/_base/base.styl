html, body {
  height: 100%;
  margin: 0;
  padding: 0;
  line-height: 25px;
  color: #666666;
  background-color: #ffffff;
  -ms-word-wrap: break-word;
  word-wrap: break-word;
  font-family: Helvetica, Tahoma, Arial, STXihei, "华文细黑", "Microsoft YaHei", "微软雅黑", sans-serif;
}
body{
  font-size:62.5%;
}
h1, h2, h3, h4, h5, h6 {
  margin: 12.5px 0;
  font-family: 'Roboto Slab', serif;
  font-weight: 700;
  line-height: 1.3;
  color: #333333;
  text-rendering: optimizelegibility;
}

a {
  text-decoration: none;
  transition(all, 0.3s);
  color: gray3;
}

ul {
  margin: 0;
  padding: 0;
}

li {
  list-style-type: none;
}

.clearfix:after {
  content: " ";
  display: none;
  width: 0;
  height: 0;
  visibility: hidden;
  clear: both;
  line-height: 0;
}

.wrapper {
  height: 100%;
  width: 100%;
}

#container {
  width: 1120px;
  margin: 0 auto;
  overflow: hidden;
  padding-top:90px;
}

#main {
  margin-left: nav-width+50px;
}

#footer {
  padding: 1px;
  clear: both;
}

// widget
// ------------

.widget {
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid #e5e5e5;
  font-size: 1em;
  li {
    /*font-size: 14;*/
    line-height: 20px;
  }
}

.widget-title {
  font-size: 14px;
}

// button
// ------------


.btn {
  display: inline-block;
  padding: 5px 15px;
  margin-bottom: 0;
  line-height: 30px;
  font-size: 15px;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  color: #ffffff;
  border: none;
  font-family: 'Roboto', "Helvetica Neue", Helvetica, Arial, sans-serif;
  background-color: #333333;
  text-transform: capitalize;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
  -webkit-transition: background 0.2s;
  -moz-transition: background 0.2s;
  -o-transition: background 0.2s;
  transition: background 0.2s;
  &:hover {
    background-color: #7cc576;
    text-decoration: none;
    color: #ffffff;
  }
}

.btn-small {
  line-height: 20px;
  font-size: 12px;
  padding: 5px 12px;
}


// media query

.more-link {
  margin-top: 30px;
}

.more-link {
  display: block;
}

// 首页 文章标题列表 icon
.icon-file-text:before {
  content: "\f15c";
}

.icon-calendar-empty:before {
  content: "\f133";
}

.icon-comment-alt:before {
  content: "\f0e5";
}

[class^="icon-"]:before, [class*=" icon-"]:before {
  display: inline-block;
  speak: none;
}

[class^="icon-"], [class*=" icon-"] {
  display: inline;
  width: auto;
  height: auto;
  line-height: normal;
  vertical-align: baseline;
  background-image: none;
  background-position: 0% 0%;
  background-repeat: repeat;
  margin-top: 0;
}

[class^="icon-"], [class*=" icon-"] {
  font-family: FontAwesome;
  font-weight: normal;
  font-style: normal;
  text-decoration: inherit;
  -webkit-font-smoothing: antialiased;
}