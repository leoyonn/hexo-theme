html, body {
  height: 100%;
  margin: 0;
  padding: 0;
  line-height: 24px;
  color: #666666;
  background-color: #ffffff;
  -ms-word-wrap: break-word;
  word-wrap: break-word;
  font-family: "Helvetica Neue",Helvetica,Arial,"Hiragino Sans GB","Hiragino Sans GB W3","WenQuanYi Micro Hei",sans-serif;
}

body {
  font-size: 62.5%;
}

h1, h2, h3, h4, h5, h6 {
  margin: 12.5px 0;
  font-weight: 700;
  line-height: 1.3;
  color: #333333;
}

p {
  margin: 0 0 12.5px;
}

a {
  text-decoration: none;
  transition(all 0.2s);
  color: gray3;
}

ul {
  margin: 0;
  padding: 0;
}

li {
  list-style-type: none;
}

.clearfix::after {
  content: " ";
  display: none;
  width: 0;
  height: 0;
  visibility: hidden;
  clear: both;
  line-height: 0;
}
