html, body {
  height: 100%;
  margin: 0;
  padding: 0;
  line-height: 24px;
  color: #666666;
  background-color: #ffffff;
  -ms-word-wrap: break-word;
  word-wrap: break-word;
  font-family: "Helvetica Neue",Helvetica,Arial,"Hiragino Sans GB","Hiragino Sans GB W3","WenQuanYi Micro Hei",sans-serif;
}

body {
  font-size: 62.5%;
}

h1, h2, h3, h4, h5, h6 {
  margin: 12.5px 0;
  font-weight: 700;
  line-height: 1.3;
  color: #333333;
}

p {
  margin: 0 0 12.5px;
}

a {
  text-decoration: none;
  transition(all 0.2s);
  color: gray3;
}

ul {
  margin: 0;
  padding: 0;
}

li {
  list-style-type: none;
}

code{
  font-family:Monaco;
}

.clearfix::after {
  content: " ";
  display: none;
  width: 0;
  height: 0;
  visibility: hidden;
  clear: both;
  line-height: 0;
}


/*Layout*/

.wrapper {
  height: 100%;
  width: 100%;
}

.container {
  width: 100%;
  overflow: hidden;
  padding: 80px 1em 0;
  box-sizing(border-box);
  @media phone{

  }
  @media tablet{

  }
  @media desktop{
    width:1100px;
    margin:0 auto;
  }
}

.main {
  overflow:hidden;
  @media phone{
    margin-left:- nav-width* 0.5;
  }
  @media desktop{
    margin-left: nav-width + 50px;
  }

}




// footer
#footer {
  margin-top: 1.6em;
  padding: 1px;
  clear: both;
  .site-info {
    width: 100%;
    padding: 20px 0 40px;
    background: #ffffff;
    border-top: 5px solid #333333;
    font-size: 12px;
    line-height: 20px;
    color: #aaaaaa;
    position: relative;
  }
}