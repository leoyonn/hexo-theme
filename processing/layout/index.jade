section(class="article-list")
    -page.posts.each(function(item){
    article
        header(class="entry-header")
            h2(class="entry-title")
                a(href="#{item.path}")= item.title
            div(class="entry-meta")
                //span(class="byline") By
                    span(class="author vcard")
                        a(class="url fn n" href="http://demo.designwall.com/dw-minion/?author=9" title="View all posts by Ruth Clem")  Ruth Clem
                //span(class="cat-links")  in
                    a(href="http://demo.designwall.com/dw-minion/?cat=6" title="View all posts in Delicious" rel="category")  Delicious
                    | ,
                    a(href="http://demo.designwall.com/dw-minion/?cat=2" title="View all posts in Freelancing" rel="category")  Freelancing
                    | ,
                    a(href="http://demo.designwall.com/dw-minion/?cat=4" title="View all posts in Photography" rel="category")  Photography
                span(class="sep")
                    span(class="post-format")
                        i(class="icon-file-text")
                span(class="posted-on")
                    i(class="icon-calendar-empty")
                    time(class="entry-date published" datetime="#{item.updated}")= item.date.format(config.date_format)
                    //span(class="comments-link")
                    //    a(href="http://demo.designwall.com/dw-minion/?p=33#comments" title="Comment on The Inside Secrets Of Millionaires Under The Age Of 29")
                    //        i(class="icon-comment-alt")
                    //        | 9 Comments
        //div(class="entry-thumbnail")
        //    a(href="http://www.baidu.com/")
        //        img(src="http://demo.designwall.com/dw-minion/wp-content/uploads/the-inside-secrets-of-millionaires-under-the-age-of-29.jpg")
        div(class="entry-content")
            if item.description
                p(itemprop="description")= item.description
            else if item.excerpt
                p(itemprop="description")= strip_html(item.excerpt).replace(/^\s*/, '').replace(/\s*$/, '').substring(0, 140)+"……"
            else
                p(itemprop="description")= strip_html(item.content).replace(/^\s*/, '').replace(/\s*$/, '').substring(0, 140)+"……"
            a(class="more-link" href="#")
                span(class="btn btn-small")= theme.excerpt_link
    -})